<html>
  <head>
    <title><%== @title %> â€” VisuTrans</title>
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/bootstrap/css/bootstrap-theme.min.css"/>

    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body>
    <script src="/jquery/jquery.js"></script>
    <script src="/bootstrap/js/bootstrap.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/Chart.js/0.2.0/Chart.min.js"></script>

    <style>
      body {
        padding-top: 5em;
      }
    </style>

    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse"
                  data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Visualize transactions</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        </div>
      </div>
    </nav>

    <% if flash[:success] %>
      <div class="container alert alert-success"><%= flash[:success] %></div>
    <% end %>

    <% if flash[:info] %>
      <div class="container alert alert-info"><%= flash[:info] %></div>
    <% end %>

    <% if flash[:warning] %>
      <div class="container alert alert-warning"><%= flash[:warning] %></div>
    <% end %>

    <% if flash[:danger] %>
      <div class="container alert alert-danger"><%= flash[:danger] %></div>
    <% end %>

    <%= yield %>

  </body>
</html>
